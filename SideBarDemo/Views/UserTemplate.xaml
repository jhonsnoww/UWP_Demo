<UserControl
    x:Class="SideBarDemo.Views.UserTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SideBarDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            Text="{x:Bind User.Name}" />
        <TextBlock
            FontSize="14"
            FontWeight="Normal"
            Text="{x:Bind User.Address.City}" />
        <TextBlock
            FontSize="14"
            FontWeight="Normal"
            Text="{x:Bind User.Phone}" />
    </StackPanel>

</UserControl>
